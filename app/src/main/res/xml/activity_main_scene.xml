<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear" >
        <OnSwipe motion:touchRegionId="@id/view2"
            motion:dragDirection="dragUp" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/container"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_width="412dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteY="481dp"
            motion:layout_editor_absoluteX="-8dp">
            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="#3f70d7" />

        </Constraint>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:id="@+id/view2"

            motion:layout_constraintBottom_toTopOf="@+id/container"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/darker_gray" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="#FFFF00" />
        </Constraint>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/view2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/container"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintBottom_toTopOf="@+id/container">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/darker_gray" />
        </Constraint>
    </ConstraintSet>
</MotionScene>